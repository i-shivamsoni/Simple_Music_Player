<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/anchor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <ImageView
        android:id="@+id/img_ds"
        android:layout_width="99dp"
        android:layout_height="105dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/Playbutton"
        android:src="@drawable/ic_play_button" />


    <TextView
        android:id="@+id/tv_songName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_toEndOf="@id/img_ds"
        android:layout_toRightOf="@id/img_ds"
        android:fontFamily="sans-serif-black"
        android:padding="5dp"
        tools:ignore="MissingConstraints"
        tools:text="Song Name" />

    <TextView
        android:id="@+id/tv_albumName"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_below="@id/tv_songName"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="36dp"
        android:layout_toEndOf="@id/img_ds"
        android:layout_toRightOf="@id/img_ds"
        android:fontFamily="sans-serif-condensed-medium"
        android:padding="5dp"
        tools:text="Album Name" />

    <TextView
        android:id="@+id/tv_artistName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_albumName"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="71dp"
        android:layout_toEndOf="@id/img_ds"
        android:layout_toRightOf="@id/img_ds"
        android:padding="5dp"
        tools:text="Artist Name" />

</RelativeLayout>